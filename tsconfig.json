{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"app/*": ["./src/app/*"],
			"pages/*": ["./src/pages/*"],
			"widgets/*": ["./src/widgets/*"],
			"features/*": ["./src/features/*"],
			"entities/*": ["./src/entities/*"],
			"shared/*": ["./src/shared/*"]
		},
		"strictNullChecks": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
